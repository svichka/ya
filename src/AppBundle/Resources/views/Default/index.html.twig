{% extends 'AppBundle:Default:base.html.twig' %}

{% block title %}
Выиграй 200 000 ₽ на шопинг в Милане от бренда Я
{% endblock %}
{% form_theme form 'AppBundle:Forms:form_div_layout.html.twig' %}
{% block body %}
    <main class="main-content">
        <div class="container">
            <h1 class="static-title up">Подписка</h1>
            <div class="reg-form">
                {{ form_start(form) }}
                <label style="display:none; margin-bottom: 15px; padding: 15px; text-align:center; color: red;"
                       class="online-error"></label>
                {% if errors is defined %}
                    {% for error in errors %}
                        <label
                                style="margin-bottom: 15px; padding: 15px; text-align:center; color: red;">{{ error|trans }}</label>
                    {% endfor %}
                {% endif %}
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-block">

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        {{ form_row(form.email) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-11">
                        <div class="form-block">
                            {{ form_row(form.isageagreed) }}
                            {{ form_row(form.ispdagreed) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        {{ form_row(form.recaptcha) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <button class='btn'>Отправить</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
{% endblock %}