{% extends 'AppBundle:Default:base.html.twig' %}

{% trans_default_domain "personal" %}

{% block title %}{% trans %}Победители{% endtrans %}{% endblock %}

{% block body %}
  <div id="webix-container" style="height: 100%;"></div>
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('codebase/webix.css') }}">
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('codebase/webix.js') }}"></script>
  <script>

    window.grid = new webix.ui({
      id: 'webix-container1',
      view: "datatable",
      container: 'webix-container',
      columns: [
        { id:"fio",header:["ФИО",{content:"textFilter"}], width:300},
        { id:"phone",header:["Телефон",{content:"textFilter"}], width:100, sort:"int"},
        { id:"pdate",header:["Дата розыгрыша",{content:"selectFilter"}]},
        { id:"user_id",header:["id Пользователя",{content:"textFilter"}], sort:"int"},
        { id:"user_guid",header:["guid Пользователя",{content:"textFilter"}],width:300},
        { id:"receipt_guid",header:["receipt Чека",{content:"textFilter"}],width:300},
        { id:"preactivated",header:["preactivated",{content:"selectFilter"}], sort:"int"},
        { id:"filled",header:["filled (Номер введён)",{content:"selectFilter"}], sort:"int"},
        { id:"sms",header:["sms (Номер подтверждён)",{content:"selectFilter"}], sort:"int"}
      ],
//      autoConfig:true,
      url: '{{ path('win_json') }}',
      height: "500px",
    });

  </script>
{% endblock %}